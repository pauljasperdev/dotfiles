{
  "preferences": {
    "codeStyle": {
      "gitCommitCoAuthor": false
    }
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "600000", // 10 minutes
    "BASH_MAX_TIMEOUT_MS": "1800000" // 30 minutes
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/gsd-prompt-inject.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/gsd-test-gate.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/gsd-security-gate.sh"
          }
        ]
      }
    ]
  }
}
